{% extends 'base.html.twig' %}

{% block body %}
<div class="container item">
	<div class="row align-items-center">
		<div class="col">
			<h3>{{ user.username }}</h3>
		</div>
	</div>
	<div class="row align-items-center item">
		<div class="col">
			<div class="card">
				<div class="card-header">
					posts
				</div>
				<div class="card-body">
					<ul class="list-group list-group-flush">
						{% for post in posts %}
							<li class="list-group-item">
								<a href="{{ path('show_post', {"id": post.id}) }}">{{ post.title }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="row align-items-center item">
		<div class="col">
			<div class="card">
				<div class="card-header">
					comments
				</div>
				<div class="card-body">
					<ul class="list-group list-group-flush">
						{% for comment in comments %}
							<li class="list-group-item">
								<a href="{{ path('show_post', {"id": comment.postId}) }}">{{ comment.text }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
