{% extends 'base.html.twig' %}

{% block body %}
<p>{{ post.user }} posted:</p>
<h2>{{ post.title }}</h2>
<p>{{ post.text }}</p>
<a href="{{ path('comment_page', {"id": post.id}) }}">Comment</a>
<h3>Comments</h3>
<ul>
{% for comment in comments %}
<li>{{comment.user}} said {{ comment.text }}</li>
{% endfor %}
</ul>
{% endblock %}
